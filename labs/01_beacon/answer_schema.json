{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Lab 01 Beacon answers",
  "type": "object",
  "required": ["beacons"],
  "additionalProperties": false,
  "properties": {
    "beacons": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "items": {
        "type": "object",
        "required": ["endpoint", "period_sec", "count"],
        "additionalProperties": false,
        "properties": {
          "endpoint": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+\\.\\d+:\\d+$",
            "description": "dest_ip:dest_port"
          },
          "period_sec": { "type": "number", "minimum": 1 },
          "count": { "type": "integer", "minimum": 1 }
        }
      }
    }
  }
}
